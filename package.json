{
  "name": "@oalacea/guardian",
  "version": "0.5.1",
  "description": "AI-powered security review plugin for pentesting web applications",
  "bin": {
    "guardian": "./bin/cli.js"
  },
  "files": [
    "bin/",
    "prompt/",
    "docker/"
  ],
  "keywords": [
    "pentest",
    "security",
    "web-security",
    "api-security",
    "vulnerability-scanner",
    "ai-security",
    "bug-bounty",
    "security-audit"
  ],
  "author": "Yanis",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Pamacea/guardian"
  },
  "scripts": {
    "lint": "eslint bin tests --fix",
    "lint:check": "eslint bin tests",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:security": "vitest run tests/security",
    "validate": "npm-run-all lint:check typecheck test"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-plugin-security": "^3.0.0",
    "globals": "^17.3.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
